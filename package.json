{
  "name": "a11y-checker",
  "version": "1.0.1",
  "description": "check html for accessibility issues",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "a11y-checker": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jemsco/a11y-checker.git"
  },
  "bugs": {
    "url": "https://github.com/jemsco/a11y-checker/issues"
  },
  "homepage": "https://github.com/jemsco/a11y-checker#readme",
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest",
    "build": "tsc"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "preset": "ts-jest/presets/js-with-babel-esm",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ]
  },
  "keywords": [
    "accessibility",
    "a11y",
    "axe-core",
    "cli",
    "testing",
    "html",
    "checker",
    "wcag"
  ],
  "author": "Jay Brass",
  "license": "ISC",
  "dependencies": {
    "axe-core": "^4.11.0",
    "commander": "^14.0.1",
    "jsdom": "^27.0.0"
  },
  "devDependencies": {
    "@types/axe-core": "^2.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.7.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
